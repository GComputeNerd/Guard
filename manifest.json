{
    "manifest_version":3,
    "version":"1.0",
    "name":"Guard",
    "content_scripts":[
        {
         "matches":["<all_urls>"],
         "js":["scripts/popup.js"]
        }
      ],
    "web_accessible_resources": [
        {
            "resources": ["static/flash.txt", "res/Guard_Text.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "res/guard-16.png",
        "32": "res/guard-32.png",
        "48": "res/guard-48.png",
        "128": "res/guard-128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "res/guard-429.png"
    },
    "permissions": [
        "storage"
    ]
  }